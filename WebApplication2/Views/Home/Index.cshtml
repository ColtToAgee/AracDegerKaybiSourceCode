                        <!-- https://startbootstrap.com/solution/contact-forms-->
                        <!-- to get an API token!-->
                        <form id="contactForm" data-sb-form-api-token="API_TOKEN">
                            <!-- Name input-->
                            <div class="form-group mb-3" data-sb-validations="required">
                                @Html.TextBoxFor(x => x.NameSurname, new { @placeholder = "Adınızı Ve Soyadınızı Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="name:required">Lütfen adınızı ve soyadınızı giriniz.</div>
                            </div>
                            <!-- Email address input-->
                            <div class="form-group mb-3" data-sb-validations="required,email">
                                @Html.TextBoxFor(x => x.Email, new { placeholder = "Emailinizi Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="email:required">An email is required.</div>
                                <div class="invalid-feedback" data-sb-feedback="email:email">Lütfen geçerli email giriniz.</div>
                            </div>
                            <!-- Phone number input-->
                            <div class="form-group mb-3" data-sb-validations="required">
                                @Html.TextBoxFor(x => x.Telephone, new { placeholder = "Telefonunuzu Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="phone:required">Lütfen telefon numaranızı giriniz.</div>
                            </div>
                            <!-- Message input-->
                            <div class="form-group mb-3" data-sb-validations="required">
                                @Html.TextBoxFor(x => x.CarModel, new { @placeholder = "Araç Modelinizi Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="message:required">Lütfen araç modeli giriniz.</div>
                            </div>
                            <div class="form-group mb-3" data-sb-validations="required">
                                @Html.TextBoxFor(x => x.CarYear, new { @placeholder = "Aracınızın Yılını Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="message:required">Lütfen araç yılını giriniz.</div>
                            </div>
                            <div class="form-group mb-3" data-sb-validations="required">
                                @Html.TextBoxFor(x => x.CarKm, new { @placeholder = "Aracınızın Kilometresini Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="message:required">Lütfen aracınızın kilometresini giriniz.</div>
                            </div>
                            <div class="form-group mb-3" data-sb-validations="required">
                                @Html.TextBoxFor(x => x.CarCrash, new { @placeholder = "Aracınızın Hasar Bedelini Giriniz:", @class = "form-control" })
                                <div class="invalid-feedback" data-sb-feedback="message:required">Lütfen hasar bedelini giriniz.</div>
                            </div><!-- Submit success message-->
                            <!---->
                            <!-- This is what your users will see when the form-->
                            <!-- has successfully submitted-->
                            <div class="d-none" id="submitSuccessMessage">
                                <div class="text-center mb-3">
                                    <div class="fw-bolder">Formunuz Gönderildi!</div>
                                </div>
                            </div>
                            <!-- Submit error message-->
                            <!---->
                            <!-- This is what your users will see when there is-->
                            <!-- an error submitting the form-->
                            <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                            <!-- Submit Button-->
                            <div class="d-grid"><button class="btn btn-primary btn-xl " onclick="showContent()">Hesapla</button></div>
                        </form>
                    </div>
